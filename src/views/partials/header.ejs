<header>
    <div class="top-navigation-bar">
        <div class="left-column">
            <a href="/">
                <img alt="" class="logo" src="/images/Background.png">
            </a>
        </div>
        <form action="/products/busquedaProductos" class="search-menu" method="get" name="searchnav"
            enctype="multipart/form-data">
            <a class="search-filter" href="" name="search-filter">
                All products<i class="fa-solid fa-chevron-down search-filter-button"></i>
            </a>
            <input class="search-bar" name="search" id="search" type="text" />
            <button class="magnifying-glass" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </form>
        <% if(locals.isLogged) {%>
        <div class="right-column">
            <a class="top-navigation-bar-button" href="/users/profile">
                Profile
            </a>
            <a class="top-navigation-bar-button" href="/products/agregarProducto">
                Sell
            </a>
            <a class="top-navigation-bar-favorite-button" href="/products/productList">
                Mis productos
                <!-- <i class="fa-solid fa-chevron-down right-column-dropdown-menu"></i> -->
            </a>
            <% if(locals.userLogged && locals.userLogged.email == "pepe@hotmail.com") {%>
            <a class="top-navigation-bar-button" href="/admin">
                <i>Admin</i>
            </a>
            <% } else { %>
            <a class="top-navigation-bar-button" href="">
                <i class="fa-solid fa-bell top-navigation-bar-icon"></i>
            </a>
            <% } %>
            <a class="top-navigation-bar-button" href="/products/productCartEmpty">
                <i class="fa-solid fa-cart-shopping top-navigation-bar-icon"></i>
                <span class="badge red z-depth-1 mr-1 cart-number">0</span>
            </a>
        </div>
        <% } else { %>
        <div class="right-column">
            <div class="login-header">
                <a class="top-navigation-bar-button" href="/users/login">
                    Login
                    <i class="login-icon fa-solid fa-right-to-bracket"></i>
                </a>
            </div>
            <div class="register-header">
                <a class="top-navigation-bar-button" href="/users/register">
                    Register
                </a>
            </div>
            <a class="top-navigation-bar-button" href="/products/productCartEmpty">
                <i class="fa-solid fa-cart-shopping top-navigation-bar-icon"></i>
                <span class="badge red z-depth-1 mr-1 cart-number">0</span>
            </a>
            <% }%>

        </div>
    </div>
</header>