<!DOCTYPE html>
<html lang="en">

<head>
  <link href="/css/index.css" rel="stylesheet" />
  <link href="/css/profile.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Mulish&display=swap" rel="stylesheet" />
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <link rel="shortcut icon" href="/images/Logo.png">
</head>

<body>
  <!-- Header -->
  <%- include('../partials/header.ejs') %>
  <!-- /Header -->

  <main>
      <br>
      <br>
      <br>
      <br>


      
      <br>
      <br>
      <br>


    <div class="contendor-todo">
      <div class="contenedor-perfil">

        
        <!-- <a class="wallpaper-button" href="./logout">Salir de mi cuenta.</a>   -->
        <div class="perfil">
          <br>
          <img src="/images/users/<%= user.image %>" class="iman" >
          <hr>
            <h3>
               <i class="fa-solid fa-user"></i> 
               <%= user.name %>
              </h3>
            <hr>
            <h4 class="email-profile">
              <i class="fa-solid fa-envelope"></i>
              <%= user.email %>
            </h4>
            <hr>
            <div class="btn-productos-profile">
              <div class="btn-producto-misProductos">
                <button class="btn-sidebars" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Ver mis Productos <i class="fa-solid fa-eye"></i></button>
              </div>
              <div class="btn-producto-carrito">
                <button class="btn-sidebars" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Productos en mi carrito <i class="fa-solid fa-cart-shopping"></i></button>
                </div>
              </div>
            <a class="wallpaper-button" href="./logout">Salir  <i class="fa-sharp fa-solid fa-right-from-bracket icon-exit"></i></a>  
            <br>
        </div>
        <div class="card-desktop mb-5 desktop-card">
          <div class="card-header">
              Mis Pedidos <i class="fa-solid fa-truck-fast"></i>
          </div>
          <div class="card-body">
              <table class="table table-responsive-md mb-0">
                  <thead>
                      <tr>
                          <th style="width: 50px;">
                              <strong>#</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Envío</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Pago</strong>
                          </th>
                          <th>
                              <strong>Total</strong>
                          </th>
                          <th style="width: 50px;"></th>
                      </tr>
                  </thead>
                  <tbody>
                      <% orders.forEach((order,index)=> { %>
                          <tr>
                              <th scope="row">
                                  <%= index + 1 %>
                              </th>
                              <td>
                                  <%= order.shippingMethod %>
                              </td>
                              <td>
                                  <%= order.paymentMethod %>
                              </td>
                              <td>$ <%= order.total %>
                              </td>
                          </tr>
                          <% }); %>
                  </tbody>
              </table>
          </div>
      </div>
      </div>
  

<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Todos mis</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <% product.forEach(product => { %>
      <br>
      <div class="card card-bosstrap">
          <div class="card-body">
              <h5 class="card-title title-bosstrap"><%= product.name %></h5>
            <div>
              <img alt="" class="card-img-top img-bosstrap" src="/images/productos/<%= product.image %>" />
            </div>
          <a class="ver-detalle" href="/products/productDetail/<%= product.id %>" type="submit">Ver detalle</a>
            <hr>
            <p class="card-text" color="green">$ <%= product.price %></p>
          </div>
      </div>
      <% }) %>
  </div>
</div>

            <br>
            <br>
            <!-- <div class="btn-productos-profile">
              <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Ver mis Productos</button>
              <div class="btn-producto-carrito">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Productos en mi carrito</button>
                </div>
              </div> -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
              <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasRightLabel">Todo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              <div class="carj">
              <div class="offcanvas-body" width="max-content">
              <h4>Contenido de mi carrito</h4>
              <br>
              <table>
                <tbody class="cartRows">
                </tbody>
              </table>
              <br>
              <br>
              <a href="/products/productCartEmpty" class="btn-carrito">Mi carrito <i class="fa-solid fa-cart-shopping"></i></a>
            </div>

          </div>
            <hr>
        </div>

        </div>
<br>
<br>

        <div class="card-phone mb-5">
          <div class="card-header">
              Mis Pedidos
          </div>
          <div class="card-body">
              <table class="table table-responsive-md mb-0">
                  <thead>
                      <tr>
                          <th style="width: 50px;">
                              <strong>#</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Envío</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Pago</strong>
                          </th>
                          <th>
                              <strong>Total</strong>
                          </th>
                          <th style="width: 50px;"></th>
                      </tr>
                  </thead>
                  <tbody>
                      <% orders.forEach((order,index)=> { %>
                          <tr>
                              <th scope="row">
                                  <%= index + 1 %>
                              </th>
                              <td>
                                  <%= order.shippingMethod %>
                              </td>
                              <td>
                                  <%= order.paymentMethod %>
                              </td>
                              <td>$ <%= order.total %>
                              </td>
                          </tr>
                          <% }); %>
                  </tbody>
              </table>
          </div>
      </div>





        <br>
        <br>
  </main>
  <!-- Footer  -->

  <script src="/js/cart.js"></script>
  <script src="/js/scripts.js"></script>
  <%- include('../partials/footerdos.ejs') %>
  <%- include('../partials/footer.ejs') %>
  <!-- /Footer  -->
