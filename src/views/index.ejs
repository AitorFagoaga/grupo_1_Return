<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="/css/index.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Mulish&display=swap" rel="stylesheet"/>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="shortcut icon" href="/images/Logo.png">
  </head>
  <body>
    <!-- Header -->
    <%- include('./partials/header.ejs') %>
    <!-- /Header -->
    <main>
      <div class="wallpaper">
        <img alt="" class="wallpaper-background" src="/images/Banner 1.jpg" />
        <a class="wallpaper-button" href="">Take me there</a>  
            <a class="wallpaper-option-1" href="" type="submit"></a>
            <a class="wallpaper-option-2" href="" type="submit"></a>
            <a class="wallpaper-option-3" href="" type="submit"></a>
      </div>
      <h4 class="headline-1">Popular categories</h4>
      <ul class="category" name="category">
        <a class="category-1" href=""><i class="fa-solid fa-tv category-icon"></i></a>
        <a class="category-2" href=""><i class="fa-solid fa-headset category-icon"></i></a>
        <a class="category-3" href=""><i class="fa-solid fa-gamepad category-icon"></i></a>
        <a class="category-4" href=""><i class="fa-brands fa-playstation category-icon"></i></a>
        <a class="category-5" href=""><i class="fa-brands fa-xbox category-icon"></i></a>
        <a class="category-button" href="">All categories</a>
      </ul>
      <h4 class="headline-2">New arrivals</h4>
      <section class="new-product">
        <% productsOnSale.forEach(product => { %>
        <a class="new-product-detail" href="/products/productDetail/<%= product.id %>" type="submit">
            <div class="new-product-discount"><%= product.discount %>%</div>
            <img alt="" class="new-product-image" src="/images/productos/<%= product.image %>"/>
            <div class="new-product-name"><%= product.name %></div>
            <div class="new-product-price">$ <%= product.price %></div>
        </a>
        <% }) %>
      </section>
      <h4 class="headline-3">Trending</h4>
      <section class="trending-product">
        <% productsTrending.forEach(product => { %>
            <a class="trending-product-detail" href="" type="submit">
                <img alt="" class="trending-product-image" src="/images/productos/<%= product.image %>"/>
                <div class="trending-product-name"><%= product.name %></div>
                <div class="trending-product-price">$ <%= product.price %></div>
            </a>
        <% }) %>
      </section>
    </main>
    <!-- Footer  -->
    <%- include('./partials/footer.ejs') %>
    <!-- /Footer  -->
  </body>
</html>
