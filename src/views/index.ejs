    <title>Home</title>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header.ejs') %>
    <main>
        <div class="wallpaper" name="wallpaper">
            <img alt="" class="wallpaper-background" src="/images/Wallpaper.jpg">
            <a class="wallpaper-button" href="" name="wallpaper-button">Take me there</a>
        </div>
        <h4 class="headline-1">Popular categories</h4>
