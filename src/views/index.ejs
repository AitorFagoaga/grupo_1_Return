    <h4 class="headline-1">Productos Nuevos</h4>
    <section class="new-product">

      <% product.forEach(product => { %>
      <div class="card card-bosstrap">
          <div class="card-body">
              <h5 class="card-title title-bosstrap"><%= product.name %></h5>
            <div>
              <img alt="" class="card-img-top img-bosstrap" src="/images/productos/<%= product.image %>" />
            </div>
            <div>
              <p><%= product.description.substring(0,30) %>....</p>
            </div>
          <a class="ver-detalle" href="/products/detalleProducto/<%= product.id %>" type="submit">Ver detalle</a>
            <hr>
            <p class="card-text" color="green">$ <%= product.price %></p>
          </div>
          
          <button class="btn btn-primary agregar_carrito"  data-id="<%= product.id %>">AÃ±adir al carito</button>

