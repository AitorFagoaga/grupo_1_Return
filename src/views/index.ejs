            <a class="category-5" href="" name="category-5"><i class="fa-brands fa-xbox category-icon"></i></a>
            <a class="category-button" href="" name="category-button">All categories</a>
        </ul>
        <h4 class="headline-2">New arrivals</h4>
        <section class="new-product" name="new-product">
            <article class="new-product-1" name="new-product-1">
                <h3 class="new-product-discount"><i class="fa-solid fa-bookmark"></i></h3>
                <a href="" name="new-product-image try" type="submit">
                    <img alt="" class="new-product-image" src="/images/Wallpaper.jpg">
                </a>
                <h3 class="new-product-title">Product Name</h3>
                <h3 class="new-product-price">U$D 999.99</h3>
            </article>
            <article class="new-product-2" name="new-product-2">
                <h3 class="new-product-discount"><i class="fa-solid fa-bookmark"></i></h3>
                <a href="" name="new-product-image" type="submit">
                    <img alt="" class="new-product-image" src="/images/Wallpaper.jpg">
                </a>
                <h3 class="new-product-title">Product Name</h3>
                <h3 class="new-product-price">U$D 750.00</h3>
            </article>
            <article class="new-product-3" name="new-product-3">
                <h3 class="new-product-discount"><i class="fa-solid fa-tags"></i></h3>
                <a href="" name="new-product-image" type="submit">
                    <img alt="" class="new-product-image" src="">
                </a>
                <h3 class="new-product-title">Product Name</h3>
                <h3 class="new-product-price">U$D 100.00</h3>
            </article>
        </section>
        <h4 class="headline-3">Trending</h4>
        <section class="trending-product" name="trending-product">
            <article class="trending-product-1" name="trending-product-1">
                <a href="" type="submit">
                    <img alt="" class="trending-product-image" src="/images/Wallpaper.jpg">
                </a>
            </article>
        </section>
    </main>
    <!-- Footer  -->
    <%- include('./partials/footer.ejs') %>
