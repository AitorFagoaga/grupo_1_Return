<!DOCTYPE html>
<html lang="en">

<head>
  <link href="/css/index.css" rel="stylesheet" />
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Mulish&display=swap" rel="stylesheet" />
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <link rel="shortcut icon" href="/images/Logo.png">
</head>

<body class="body">
  <!-- Header -->
  <%- include('./partials/header.ejs') %>
  <!-- /Header -->

  <main>
    <br>
    <br>
    <br>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
      <div class="carousel-inner">
        <div class="carousel-item active carusel-bosstrap">
          <img src="/images/Banner2.jpg" class="d-block w-100" alt="...">
          <!-- <div class="carousel-caption d-none d-md-block">
            <h5>Empieza a buscar los mejores productos</h5>
            <a href=""></a>
          </div> -->
        </div>
        <div class="carousel-item carusel-bosstrap">
          <img src="/images/Banner1.jpg" class="d-block w-100" alt="...">
          <!-- <div class="carousel-caption d-none d-md-block">
            <h5>Second slide label</h5>
            <p>Some representative placeholder content for the second slide.</p>
          </div> -->
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <!-- <div class="slider">
      <ul>
        <li><img src="/images/probando1.jpg"></li>
        <li><img src="/images/probando2.jpg"></li>
        <li><img src="/images/probando3.jpg"></li>
      </ul>

    </div> -->

    <h4 class="headline-1">Categorías Populares</h4>
    <ul class="category" name="category">
      <a class="category-1" href=""><i class="fa-solid fa-tv category-icon"></i></a>
      <a class="category-2" href=""><i class="fa-solid fa-headset category-icon"></i></a>
      <a class="category-3" href=""><i class="fa-solid fa-gamepad category-icon"></i></a>
      <a class="category-4" href=""><i class="fa-brands fa-playstation category-icon"></i></a>
      <a class="category-5" href=""><i class="fa-brands fa-xbox category-icon"></i></a>
      <a class="category-button" href="">Todas las Categorias</a>
    </ul>
    <h4 class="headline-2">Nuevos Productos</h4>
    <section class="new-product">

      <% product.forEach(product => { %>
      <div class="card card-bosstrap">
          <div class="card-body">
              <h5 class="card-title title-bosstrap"><%= product.name %></h5>
            <div>
              <img alt="" class="card-img-top img-bosstrap" src="/images/productos/<%= product.image %>" />
            </div>
          <a class="ver-detalle" href="/products/detalleProducto/<%= product.id %>" type="submit">Ver detalle</a>
            <hr>
            <p class="card-text" color="green">$ <%= product.price %></p>
            <a class="btn btn-primary" href="/products/detalleProducto/<%= product.id %>">Añadir al carrito</a>
          </div>
      </div>
      <% }) %>



  </main>
  <!-- Footer  -->
  <%- include('./partials/footerdos.ejs') %>
  <%- include('./partials/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- /Footer  -->
  
</body>
